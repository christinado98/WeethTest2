<!doctype>
<html>

<head>
  <title>Weeth</title>
  <link rel="icon" href="">
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" type="text/css" href="../css/style.css">
  <script src="../js/jquery.min.js"></script>
  <script src="../js/script.js"></script>
  <script src="../js/facebookProfile.js"></script>
  <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link href="https://fonts.googleapis.com/css?family=Raleway:400,600,800&display=swap" rel="stylesheet">
</head>

<body>
  <script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v6.0"></script>
  <img id="back" onclick="goBack();" src="img/back.png">
  <div id="navBar" class="bar profileBar"></div>
  <img id="userPhoto" src="{{user.userPhoto}}">
  <p id="profileName">{{user.name}}</p>

  <form style="width: 90%; padding: 3% 5% 3% 5%; margin: 0;">
    <div display="block" class="input-icons">
      <i class="fa fa-user icon"></i>
      <input id="profileNameTwo" class="profileText" onClick="this.select();" type="text" value="{{user.name}}"></input>
    </div>

    <div display="block" class="input-icons">
      <i class="fa fa-envelope icon"></i>
      <input id="profileEmail" class="profileText" onClick="this.select();" type="text" value="{{user.email}}"></input>
    </div>

    <div display="block" class="input-icons">
      <i class="fa fa-key icon"></i>
      <input id="profilePassword" class="profileText" onClick="this.select();" type="password" value="{{user.password}}"></input>
    </div>
  </form>
  
  <button id="saveChanges">Save Changes</button>
  <br><br>
  <button id="signOut" onclick="window.location.href='/';">Sign Out</button>
</body>

</html>
